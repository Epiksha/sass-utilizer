{
    "name": "sass-utilizer",
    "version": "2.3.3",
    "description": "A dynamic utility builder for SASS (SCSS) aimed at generating utilities with little to no config.",
    "author": "Calvin Tiley",
    "main": "sass-utilizer.scss",
    "license": "ISC",
    "keywords": [
        "sass",
        "scss",
        "library",
        "utility",
        "utilities",
        "css",
        "dynamic"
    ],
    "scripts": {
        "start": "sass sass-utilizer.scss:sass-utilizer.css --no-source-map",
        "watch": "sass sass-utilizer.scss:sass-utilizer.css --watch --no-source-map",
        "test": "sass sass-utilizer.scss:sass-utilizer.css --no-source-map",
        "preversion": "npm test",
        "postversion": "git push && git push --tags && npm publish",
        "postpublish": "git checkout development && git merge master && git push"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Epiksha/sass-utilizer.git"
    },
    "bugs": {
        "url": "https://github.com/Epiksha/sass-utilizer/issues"
    },
    "homepage": "https://github.com/Epiksha/sass-utilizer#readme",
    "dependencies": {
        "sass": "^1.26.5",
        "sass-true": "^6.0.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "husky": "^4.3.0"
    }
}
